<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Dark theme) -->
    <style name="Theme.BleKotlin" parent="android:Theme.Material.NoActionBar">
        <!-- Primary brand colors -->
        <item name="android:colorPrimary">@color/purple_200</item>
        <item name="android:colorPrimaryDark">@color/purple_700</item>
        <item name="android:colorAccent">@color/teal_200</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Window background color -->
        <item name="android:windowBackground">@color/dark_background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
</resources> 