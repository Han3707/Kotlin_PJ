<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Light theme) -->
    <style name="Theme.BleKotlin" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@android:color/system_accent1_500</item>
        <item name="android:colorPrimaryDark">@android:color/system_accent1_700</item>
        <item name="android:colorAccent">@android:color/system_accent2_500</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/system_accent1_700</item>

        <!-- Window background color -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@android:color/system_neutral1_900</item>
        <item name="android:textColorSecondary">@android:color/system_neutral1_700</item>
        <item name="android:textColorHint">@android:color/system_neutral1_400</item>

        <!-- Disable the default navigation bar divider -->
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>
</resources> 